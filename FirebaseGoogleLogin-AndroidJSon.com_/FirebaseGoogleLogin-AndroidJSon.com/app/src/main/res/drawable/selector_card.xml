<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="150"
    android:exitFadeDuration="150">
    <item android:state_pressed="true"
        android:drawable="@drawable/card_highlighted_background" /> <!-- pressed -->
    <item android:state_focused="true"
        android:drawable="@drawable/card_highlighted_background" /> <!-- focused -->
    <item android:state_hovered="true"
        android:drawable="@drawable/card_highlighted_background" /> <!-- hovered -->
    <item android:drawable="@drawable/card_default_background" /> <!-- default -->
</selector>